<%- include('../partials/header') -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universities</title>
    <link rel="stylesheet" href="/public/css/custom.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
</head>
<body>
    <section id="header">
        <a href="#"><img src="" class="logo" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a class="active" href="index.html">HOME</a></li>
                <div class="popup" onclick="myFunction()">
                    <li><a href="#">About</a></li>
                    <span class="popuptext" id="myPopup">Riyadh University Landmarks" website is your comprehensive guide to exploring all the vibrant and distinctive locations within the campus of Riyadh University.</span>
                </div>
                <li><a href="#contactSection">CONTACT</a></li>
                
                <% if (!user) { %>

                  <li class="nav-item active">
                    <a class="nav-link" href="/users/login"> Login</a>
                  </li>
    
                  <li class="nav-item active">
                      <a class="nav-link" href="/users/signup"> Signup</a>
                    </li>
                  <% } else { %>
                    <li class="nav-item">
                      <a class="nav-link" href="/events/create"> Rate place</a>
                    </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="/users/logout"> logout</a>
                  </li>
                  <%}  %>
            </ul>
        </div>
    </section>

    <section id="hero">
        <h2>Feeling lost?</h2>
        <h4> Want to discover the <span class="text" style="color: rgb(79, 200, 209);"> </span> on your campus? </h4>
        <h4 style="color: rgb(79, 200, 209);"> WE CAN HELP YOU</h4>
        <h4> WELCOME to your guide</h4>
        <button>Explore now</button>
    </section>

    <section id="feature" class="section-p1">
        <div class="fe-box">
            <img src="assets/شعار_جامعة_الإمام_المعتمد_للتحميل.png" alt="">
            <p>Imam Mohammed bin saud university</p>
            <button id="exploreButton">Explore</button>
        </div>
        <div class="fe-box">
            <img src="assets/King_Saud_University_logo.png" alt="">
            <p>King Saud university</p>
            <button id="exploreButton2">Explore</button>
        </div>
        <div class="fe-box">
            <img src="assets/1630508390505.jpg" alt="">
            <p>Princess Nourah university</p>
            <button id="exploreButton3">Explore</button>
        </div>
    </section>

    <script>
        function myFunction() {
            var popup = document.getElementById("myPopup");
            popup.classList.toggle("show");
        }
    </script>
    <script src="/Frontend/script.js"></script>
</body>
</html>


<%- include('../partials/footer') -%>